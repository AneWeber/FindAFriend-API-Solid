{
  "name": "findafriend-api-solid",
  "type": "module",
  "version": "1.0.0",
  "description": "Our app connects animal welfare organizations (ORGs) with potential adopters, making pet adoption easier and more accessible. By increasing pet visibility and simplifying communication, we help more animals find loving homes.",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node build/server.js",
    "build": "tsup src --out-dir build",
    "test": "vitest run --project unit",
    "test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-environment": "npm link vitest-environment-prisma",
    "test:watch": "vitest --project unit",
    "test:e2e": "vitest run --project e2e",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui --api 9527"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "9.6.0",
    "@types/bcryptjs": "2.4.6",
    "@types/node": "22.13.10",
    "@types/supertest": "6.0.2",
    "@vitest/coverage-v8": "3.0.9",
    "@vitest/ui": "3.0.9",
    "npm-run-all": "4.1.5",
    "prisma": "6.5.0",
    "supertest": "7.1.0",
    "tsup": "8.4.0",
    "tsx": "4.19.3",
    "typescript": "5.8.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.0.9",
    "vitest-tsconfig-paths": "3.4.1"
  },
  "dependencies": {
    "@fastify/cookie": "11.0.2",
    "@fastify/jwt": "9.1.0",
    "@prisma/client": "6.5.0",
    "bcryptjs": "3.0.2",
    "dotenv": "16.4.7",
    "fastify": "5.2.1",
    "zod": "3.24.2"
  }
}
